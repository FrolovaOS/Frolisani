<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2FBC2B0"
    tools:context="com.example.Recipes.screens.search">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:hint="Введите рецепт" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/kitchen"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#05FFFFFF"
                android:padding="0dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                android:scaleType="fitXY"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:srcCompat="@drawable/bbb4"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:srcCompat="@drawable/bbb4" />

            <TextView
                android:id="@+id/Kitchen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="middle"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Тип кухни"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/type_of_food"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#05FFFFFF"
                android:padding="0dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="100dp"
                android:scaleType="fitXY"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:srcCompat="@drawable/veg1"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:srcCompat="@drawable/veg1" />

            <TextView
                android:id="@+id/TypeoOfFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="middle"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Тип питания"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/type_of_dish"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#05FFFFFF"
                android:padding="0dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                android:scaleType="fitXY"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ff5"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:srcCompat="@drawable/ff5" />

            <TextView
                android:id="@+id/Type_of_dish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="middle"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Тип блюда"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/main_product"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="0dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/uecm1" />

            <TextView
                android:id="@+id/Main_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="middle"
                android:focusable="auto"
                android:gravity="center"
                android:text="Главный ингредиент"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/drinks"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                app:srcCompat="@drawable/fffvf1" />

            <TextView
                android:id="@+id/Drinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Напитки"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>